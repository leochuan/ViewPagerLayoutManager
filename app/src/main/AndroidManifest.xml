<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rouchuan.viewpagerlayoutmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="rouchuan.viewpagerlayoutmanager.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".circle.CircleLayoutActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".circlescale.CircleScaleLayoutActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".scale.ScaleLayoutActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".gallery.GalleryLayoutActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".carousel.CarouselLayoutActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".rotate.RotateLayoutActivity"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>